# StackSusu Root Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Network Configuration
# ===================

# Network to connect to (mainnet or testnet)
STACKS_NETWORK=mainnet

# Stacks API endpoint
STACKS_API_URL=https://api.mainnet.hiro.so

# ===================
# Contract Configuration
# ===================

# Contract deployer address
DEPLOYER_ADDRESS=SP3FKNEZ86RG5RT7SZ5FBRGH85FZNG94ZH1MCGG6N

# ===================
# Testing Configuration
# ===================

# Default fee for test transactions (in microSTX)
DEFAULT_FEE=10000

# Max wait time for transaction confirmation (ms)
TX_CONFIRMATION_TIMEOUT=120000

# ===================
# Development
# ===================

# Enable verbose logging
DEBUG=false
